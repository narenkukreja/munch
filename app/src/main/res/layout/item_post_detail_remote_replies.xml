<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/remote_replies_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/spacing_lg"
    android:paddingEnd="@dimen/spacing_lg"
    android:paddingTop="@dimen/spacing_md"
    android:paddingBottom="@dimen/spacing_md">

    <View
        android:id="@+id/remote_replies_indent_stripe"
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/remote_replies_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/remote_replies_loading_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/remote_replies_progress"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:id="@+id/remote_replies_loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xs"
                android:fontFamily="@font/sfpro"
                android:includeFontPadding="false"
                android:text="Loading repliesâ€¦"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/remote_replies_error_column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/remote_replies_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sfpro"
                android:includeFontPadding="false"
                android:text="Failed to load replies"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/remote_replies_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:fontFamily="@font/sfprobold"
                android:includeFontPadding="false"
                android:text="Retry"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/remote_replies_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sfprobold"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>
</FrameLayout>

